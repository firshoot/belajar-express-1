<!-- views/index.ejs -->
<h1>Welcome to the Home Page</h1>
<p>This is the main landing page for the application.</p>

<div>
    <% if (news && news.length) { %>
        <% news.forEach(function(article) { %>
            <h2><%= article.title %></h2>
            <p><%= article.content %></p>
        <% }); %>
    <% } else { %>
        <p>No news articles available.</p>
    <% } %>
</div>
